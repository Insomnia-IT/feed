{
    "name": "feed",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "scripts": {
        "bootstrap": "npm ci",
        "build": "lerna run build --stream --scope @feed/admin --scope @feed/scanner",
        "build:since": "nx affected --target=build",
        "dep": "nx graph",
        "bl": "npx update-browserslist-db@latest",
        "lint:js": "lerna run lint:js",
        "lint-fix:js": "lerna run lint-fix:js",
        "lint:css": "stylelint 'packages/**/*.{css,scss,less}'",
        "lint-fix:css": "stylelint --fix 'packages/**/*.{css,scss,less}'",
        "lint:ts": "lerna run tc",
        "lint": "npm-run-all -s lint:*",
        "lint-fix": "npm-run-all -s lint-fix:*",
        "tc": "lerna run tc",
        "todo": "leasot -i \"**/node_modules/**\" --reporter markdown \"packages/**/*.ts\" \"packages/**/*.tsx\" > TODO.md",
        "madge": "npx madge",
        "stat": "tokei",
        "prepare": "husky"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@stylistic/stylelint-plugin": "^4.0.0",
        "cross-env": "^10.0.0",
        "husky": "^9.1.7",
        "leasot": "^14.4.0",
        "lerna": "^8.2.3",
        "lint-staged": "^16.1.5",
        "npm-run-all": "^4.1.5",
        "nx": "21.4.0",
        "rimraf": "^6.0.1",
        "stylelint": "^16.23.1",
        "stylelint-config-standard": "^39.0.0"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": "prettier --write",
        "*.{css,scss,less}": "stylelint --fix"
    }
}
